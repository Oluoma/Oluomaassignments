<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_dehaze_black_24dp"/>

        <EditText
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:text="@string/brands"
            android:textSize="21dp"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/photo_camera_black_24dp"/>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/add_shopping_cart_black_24dp"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="horizontal"
        android:background="@color/colorAccent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/carrousel"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="133.3dp"
            android:layout_height="140dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/allcatergoriesicon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/menu"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="133.3dp"
            android:layout_height="140dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/mystores" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/stores"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="133.3dp"
            android:layout_height="140dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/coins_coupons" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/fans"
                android:textSize="25dp"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="147.5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="147.5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:src="@drawable/oldwoman"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="147.5dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:src="@drawable/perfume"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="147.5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="147.5dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:src="@drawable/wristwatch"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="147.5dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:src="@drawable/underwears"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>